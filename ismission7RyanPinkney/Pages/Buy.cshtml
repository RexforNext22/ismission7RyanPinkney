@page
@{
}


@model ismission7RyanPinkney.Pages.BuyModel


<h2>Your Shopping Cart</h2>

<table class="table table-bordered table-striped">

    <thead>
        <tr>
            <th>Book</th>
            <th>Quantity</th>
            <th>Cost</th>
            <th>Subtotal</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var i in Model.Basket.Items)
        {

            <tr>
                <td>@i.Books.Title</td>
                <td>@i.Quantity</td>
                <td>@i.Books.Price</td>
                <td>@(i.Quantity * i.Books.Price)</td>
            </tr>


        }
    </tbody>

    <tfoot>
        <tr>
            <td colspan="3">
                Total:
            </td>
            <td>@Model.Basket.CalcualteTotal().ToString("c")</td>
        </tr>

    </tfoot>

</table>

<div>
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping</a>
</div>