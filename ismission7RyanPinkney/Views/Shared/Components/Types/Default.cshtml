@{
}

<!--Set the model type-->
@model IEnumerable<string>

<!--Title-->
<h2>Fun Categories</h2>

<!-- for each loop to display out the different categories-->
@foreach (string t in Model)
{
    <a asp-controller="Home" asp-action="List" asp-route-category="@t" asp-route-iPageNum="1"
       class="btn @(ViewBag.SelectedType == t ? "btn-primary" : "btn-secondary")">@t</a> <!--highlights the button that is selected-->
    <br />
    <br />
    // This line is just like a if statement
} 